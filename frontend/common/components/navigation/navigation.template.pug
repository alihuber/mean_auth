.navbar.navbar-default.navbar-fixed
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse',
      data-target='#navbar-main', aria-expanded='false')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/' id='home_link')
        span.glyphicon.glyphicon-home(aria-hidden='true')
        | &nbsp; Home
    #navbar-main.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li(ng-hide='vm.isLoggedIn')
          a(href='login')
            span.glyphicon.glyphicon-log-in(aria-hidden='true')
            | &nbsp; Sign in
        li(ng-if='vm.isLoggedIn && vm.isAdmin')
          a(href='admin')
            span.glyphicon.glyphicon-wrench(aria-hidden='true')
            | &nbsp; Admin
        li.dropdown#settings_link(ng-if='vm.isLoggedIn')
          a.dropdown-toggle(href='#', data-toggle='dropdown', role='button',
          aria-haspopup='true', aria-expanded='false')
            span.glyphicon.glyphicon-cog(aria-hidden='true')
            | &nbsp; Settings
            span.caret
          ul.dropdown-menu
           li
             a(href='profile' id='profile_link') Profile
           li
             a(href='subscriptions' id='subscriptions_link') Subscriptions
           li
             a(href='folders' id='folders_link') Folders
        li(ng-if='vm.isLoggedIn')
          a(href='logout' id='logout_link')
            span.glyphicon.glyphicon-log-out(aria-hidden='true')
            | &nbsp; Log out
